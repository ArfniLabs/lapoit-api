<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lapoit.api.mapper.TempUserMapper">

    <resultMap id="UserResultMap" type="com.lapoit.api.domain.TempUser">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="userPw" column="user_pw"/>
        <result property="userName" column="user_name"/>
        <result property="userNickname" column="user_nickname"/>
        <result property="storeId" column="store_id"/>
        <result property="phoneNumber" column="phone_number"/>
        <result property="role" column="role"/>
        <result property="code" column="code"/>
        <result property="status" column="status"/>
        <result property="createAt" column="create_at"/>
        <result property="updateAt" column="update_at"/>
    </resultMap>


    <insert id="save" parameterType="com.lapoit.api.domain.TempUser"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO temp_user (
        user_id, user_pw, user_name, store_id, phone_number,
        user_nickname, role, code, status, create_at, update_at
        ) VALUES (
        #{userId}, #{userPw}, #{userName}, #{storeId}, #{phoneNumber},
        #{userNickname}, #{role}, #{code}, #{status}, NOW(), NOW()
        )
    </insert>

    <select id="findByUserId" parameterType="string" resultMap="UserResultMap">
        SELECT *
        FROM temp_user
        WHERE user_id = #{userId}
    </select>

    <select id="findByNickname" parameterType="string" resultMap="UserResultMap">
        SELECT *
        FROM temp_user
        WHERE user_nickname = #{userNickname}
    </select>

    <select id="findByPhoneNumber" parameterType="string" resultMap="UserResultMap">
        SELECT *
        FROM temp_user
        WHERE phone_number = #{phoneNumber}
    </select>



    <select id="finTempUsersById" resultMap="UserResultMap">
        SELECT
        id, user_id, user_name, user_nickname, store_id,
        phone_number, role, code, status, create_at, update_at
        FROM temp_user
        WHERE store_id = #{storeId}
        AND status = 'PENDING'
    </select>

    <delete id="deleteByUserId">
        DELETE FROM temp_user
        WHERE user_id = #{userId}
    </delete>

</mapper>
